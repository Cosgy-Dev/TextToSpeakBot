<!-- author: Kosugi_kun -->
<configuration>
    <property name="logDir" value="./logs/"/>
    <property name="fileName" value="YomiageBot"/>
    <appender name="Simple" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Pattern -->
            <pattern>
                %nopex[%d{HH:mm:ss}] [%level] [%logger{0}]: %msg%n%ex
            </pattern>
        </encoder>
    </appender>
    <appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}${fileName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logDir}${fileName}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                %nopex[%d{HH:mm:ss}] [%level] [%logger{0}]: %msg%n%ex
            </pattern>
        </encoder>
    </appender>

    <!--<root level="INFO">
        <appender-ref ref="Simple"/>
        <appender-ref ref="File"/>
    </root>-->
    <root level="DEBUG">
        <appender-ref ref="Simple"/>
        <appender-ref ref="File"/>
    </root>

    <!--<root level="TRACE">
        <appender-ref ref="Simple"/>
        <appender-ref ref="File"/>
    </root>-->

</configuration>